{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/app",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths" : {
      "@modelos/*": ["/modelos/*"],
      "@servicios/*": ["/servicios/*"],
      "@shared/*": ["/shared/*"],
      "@core/*": ["/core/*"],
    },
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
